<% if notice %>
  <p id="notice"> 
    <%= notice %>
  </p>	
<% end %>

<h1> For Customer: </h1>
<br>
  <p><%= paginate @products %></p>
  
  <% @products.each do |product| %>
    <div class="list_items">
      
      <div class="prod_image">
        <%= image_tag(product.image_url) %>

        <%= button_to "Add to cart", line_items_path(product_id: product),
          class: "button-style", remote: true %>
      </div>

          <h3><%= link_to product.title, product %></h3>
          <h3>Description:</h3>

          <%= truncate(strip_tags(product.description), length: 80) %>
          <p><%= truncate(strip_tags("Comments: #{product.comments.count}")) if product.comments.count > 0 %></p>
          <p class="list_price"><%= number_to_currency(product.price) %></p>
    </div>
    <%end%>
  <br>
 




